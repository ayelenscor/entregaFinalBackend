<h1>Productos (Tiempo Real)</h1>

<a href="/">Volver al listado</a>

<section>
  <h2>Crear producto</h2>
  <form id="createProductForm">
    <div>
      <label>Título: <input name="title" required /></label>
    </div>
    <div>
      <label>Descripción: <input name="description" required /></label>
    </div>
    <div>
      <label>Código: <input name="code" required /></label>
    </div>
    <div>
      <label>Precio: <input name="price" type="number" step="0.01" required /></label>
    </div>
    <div>
      <label>Stock: <input name="stock" type="number" required /></label>
    </div>
    <div>
      <label>Categoría: <input name="category" required /></label>
    </div>
    <div>
      <label>Thumbnails (URLs separadas por coma): <input name="thumbnails" /></label>
    </div>
    <button type="submit">Crear</button>
  </form>
</section>

<section>
  <h2>Listado</h2>
  <ul id="productsList">
    {{#if products}}
      {{#each products}}
        <li data-id="{{this.id}}">{{this.title}} - ${{this.price}} <button class="deleteBtn" data-id="{{this.id}}">Eliminar</button></li>
      {{/each}}
    {{/if}}
  </ul>
</section>

<!-- socket.io client served automatically en /socket.io/socket.io.js -->
<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtime-products.js"></script>
