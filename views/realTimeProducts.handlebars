<div class="container">
  <h1>Productos en Tiempo Real</h1>
  
  <a href="/">Volver</a>
  
  <section>
    <h2>Crear Producto</h2>
    <form id="createProductForm">
      <div>
        <label>Nombre:</label>
        <input name="title" placeholder="Ej: Zapatillas Running" required />
      </div>
      <div>
        <label>Descripcion:</label>
        <input name="description" placeholder="Descripcion del producto" required />
      </div>
      <div>
        <label>Codigo:</label>
        <input name="code" placeholder="Codigo unico" required />
      </div>
      <div>
        <label>Precio:</label>
        <input name="price" type="number" step="0.01" placeholder="0.00" required />
      </div>
      <div>
        <label>Stock:</label>
        <input name="stock" type="number" placeholder="Cantidad disponible" required />
      </div>
      <div>
        <label>Categoria:</label>
        <input name="category" placeholder="Ej: Calzado Deportivo" required />
      </div>
      <div>
        <label>URLs:</label>
        <input name="thumbnails" placeholder="URL1, URL2, URL3" />
      </div>
      <button type="submit">Crear</button>
    </form>
  </section>
  
  <section>
    <h2>Lista de Productos</h2>
    <ul id="productsList">
      {{#if products}}
        {{#each products}}
          <li data-id="{{this.id}}">
            <div>
              <strong>{{this.title}}</strong> - <span style="color: #667eea; font-weight: bold;">${{this.price}}</span>
            </div>
            <button class="deleteBtn" data-id="{{this.id}}">Eliminar</button>
          </li>
        {{/each}}
      {{/if}}
    </ul>
  </section>
</div>

